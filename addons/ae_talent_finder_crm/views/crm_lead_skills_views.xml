<?xml version="1.0"?>
<odoo>
   <data>
    <menuitem
        name="Talent Finder"
        id="menu_ae_talent_finder_root_0" 
        web_icon="ae_talent_finder,static/description/icon.svg"
        groups="base.group_user" sequence="200"/>

       <!-- "Form view for crm.lead.skills relational table"-->

    <record id="crm_lead_skill_view_form" model="ir.ui.view">
        <field name="name">crm.lead.skill.form</field>
        <field name="model">crm.lead.skills</field>
        <field name="arch" type="xml">
            <form string="Skills" class="o_hr_skills_dialog_form" groups="base.group_user">
                <sheet>
                    <group>
                        <group>
                            <field name="lead_id" invisible="1"/>
                            <field name="skill_type_id" widget="radio" />
                        </group>
                        <group>
                            <field name="skill_id" options="{'no_open': True, 'no_create_edit': True}"
                                    context="{'default_skill_type_id': skill_type_id}"
                                    domain="[('skill_type_id', '=', skill_type_id)]"
                                    attrs="{'invisible': [('skill_type_id', '=', False)]}"/>
                            <label for="skill_level_id"
                                    attrs="{'invisible': ['|', ('skill_id', '=', False), ('skill_type_id', '=', False)]}"/>
                            <div class="o_row"
                                    attrs="{'invisible': ['|', ('skill_id', '=', False), ('skill_type_id', '=', False)]}">
                                <span class="ps-0" style="flex:1">
                                    <field name="skill_level_id"
                                            attrs="{'readonly': [('skill_id', '=', False)]}"
                                            context="{'from_skill_level_dropdown': True, 'default_skill_type_id': skill_type_id}" />
                                </span>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

         <!-- Define the new form view -->
    <record id="view_hr_employee_skill_crm_lead_form" model="ir.ui.view">
        <field name="name">hr.employee.skill.crm.lead.form</field>
        <field name="model">hr.employee.skill</field>
        <field name="inherit_id" ref="hr_skills.employee_skill_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="options">{'no_create_edit': True, 'color': 'red'}</attribute>
                <field name="weight" invisible="1"/>
                <field name="is_repeated" invisible="1"/>
                <field name="employee_id" options="{'no_create_edit': True}" widget="selection" attrs="{'invisible': [('is_repeated', '=', False)]}"/>
            </xpath>
        </field>
    </record>

       <!-- ""Form view for crm.lead.skill_type relational table"-->
    <record id="crm_lead_skill_type_view_form" model="ir.ui.view">
        <field name="name">crm.lead.skill.type.form</field>
        <field name="model">hr.skill.type</field>
        <field name="arch" type="xml">
            <form string="Skill Type" groups="base.group_user">
                <field name="id" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Skill Type"/>
                        <h1>
                            <field name="name" placeholder="e.g. Languages" required="True"/>
                        </h1>
                    </div>
                    <group string="Skills">
                    </group>
                    <field name="skill_ids" nolabel="1" context="{'default_skill_type_id': id}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle" />
                            <field name="name"/>
                        </tree>
                    </field>
                    <group string="Levels">
                    </group>
                    <field name="skill_level_ids" nolabel="1" context="{'default_skill_type_id': id}"/>
                </sheet>
            </form>
        </field>
    </record>

<!-- "Skills definition inside CRM View"-->
       <record id="crm_case_form_view_talent_finder_extension" model="ir.ui.view">
        <field name="name">crm.lead.form.view.talent.finder.extension</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Talent Finder">
                    <separator string="Skills Required" class="mb-4" />
                    <div class="o_hr_skills_editable o_hr_skills_group o_group_skills col-lg-5 d-flex flex-column">
                            <field mode="tree" nolabel="1" name="lead_skill_ids"  widget="skills_one2many" groups="base.group_user">
                                <tree>
                                    <field name="skill_type_id" invisible="1"/>
                                    <field name="skill_id" />
                                    <field name="skill_level_id"/>
                                </tree>
                            </field>
                    </div>
                    <separator string="Best Matches / Best Matches Rating" class="mb-4" />
                    <button name="button_best_matches" string="Best Matches" type="object"
                            icon="fa-search" class="btn btn-outline-secondary btn-sm" style="float:right; margin-left: 5px;"/>
                    <button name="button_matches_rating" string="Best Matches Rating" style="float:right; margin-left: 5px;"
                            type="object" icon="fa-star" class="btn btn-outline-secondary btn-sm">
                    </button>
                    <separator />
                    <field mode="tree" name="employee_skill_ids" groups="base.group_user" widget="skills_one2many">
                        <tree editable="top">
                            <field name="skill_type_id" invisible="1"/>
                            <field name="skill_id" />
                            <field name="skill_level_id"/>
                            <field name="employee_id" options="{'no_create_edit': True}" widget="many2one_avatar_user"/>
                            <field name="job_id"/>
                            <field name="department_id"/>
                        </tree>
                    </field>
                    <separator />
                    <field mode="tree" name="matching_rating" groups="base.group_user" string="Best Matching Rating">
                        <tree editable="top">
                            <field name="employee_id" widget="many2one_avatar_user"/>
                            <field name="job_id"/>
                            <field name="department_id"/>
                            <field name="matching_rating" widget="integer"/>
                            <button name="show_employee_skills" type="object" icon="fa-eye"/>
                        </tree>
                    </field>

             </page>
            </xpath>
        </field>
    </record>


   <menuitem
        name="Talent Finder"
        id="menu_ae_talent_finder_root_0" 
        web_icon="ae_talent_finder,static/description/icon.svg"
        groups="base.group_user" sequence="200"/>

    </data>
</odoo>
